@section Scripts {
    @Scripts.Render("~/Scripts/Skripta.js")
}

<div class="row">

    <div class="col-sm-4">
        <form method="post" action="post/" id="registracija">
            <h3>Registracija</h3>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" id="regEmail" />
            </div>
            <div class="form-group">
                <label>Lozinka</label>
                <input class="form-control" type="password" id="regLoz" />
            </div>
            <div class="form-group">
                <label>Potvrdi Lozinku</label>
                <input class="form-control" type="password" id="regLoz2" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Registracija</button>
            </div>
        </form>
    </div>

    <div class="col-sm-4">
        <form method="post" action="post/" id="prijava">
            <h3>Prijava</h3>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" id="priEmail" />
            </div>
            <div class="form-group">
                <label>Lozinka</label>
                <input class="form-control" type="password" id="priLoz" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Prijava</button>
            </div>
        </form>
    </div>
</div>

<br />
<div class="row">
    <div class="col-sm-4" id="odjava">
        <h3>Odjava</h3>
        <button class="btn btn-default" id="odjavise">Odjava</button>
    </div>
</div>

<hr />
<div class="row">
    <p id="info"></p>
    <br />
    <button class="btn btn-default" id="books">Books</button>
        
        <div>
            <select id="search-author" class="form-control" name="authorId" style="display:none" ></select>
            <button id ="btnSearch"  class="btn btn-default">Search</button>
        </div>
        
    <div>
        <table id="book-table" class="table table-bordered table-striped"></table>
    </div>
    <br />
    <div>
        <button class="btn btn-default" id="new-book">New book</button>
    </div>
    <br />
    <div>
       
        <form method="post" action="post/" id="add-edit-book" style="display:none">
            <input type="hidden" id="bookId" />
            <p><label>Title: <input class="form-control" id="book-title" type="text"></label></p>
            <p><label>Date published: <input class="form-control" id="book-date-published" type="text"></label></p>
            <p><label>Price: <input id="book-price" class="form-control" type="text"></label></p>
            <p><label>Author: <select class="form-control" id="book-author"> </select></label></p>
            <br />
            <p><button id="btnBook" type="submit" class="btn btn-default">Add</button></></p>

        </form>
    </div>

</div>
